@page
@model CarBookingWeb.Pages.CarPages.EditModel
@{
    ViewData["Title"] = "Cars";
}

<h1>Edit Car</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Car.Id"/>
            <div class="form-group">
                <label asp-for="Car.CarMakerId" class="control-label"></label>
                <select id="carMakers" asp-for="Car.CarMakerId" asp-items="Model.Makes" class="form-control">
                    <option>---Select Maker---</option>
                </select>
                <span asp-validation-for="Car.CarMakerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.CarModelId" class="control-label"></label>
                <select id="carModels" asp-for="Car.CarModelId" class="form-control">
                    <option>---Select Maker---</option>
                </select>
                <span asp-validation-for="Car.CarModelId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.CarColorId" class="control-label"></label>
                <select asp-for="Car.CarColorId" asp-items="Model.Colors" class="form-control">
                    <option>---Select Maker---</option>
                </select>
                <span asp-validation-for="Car.CarColorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Year" class="control-label"></label>
                <input asp-for="Car.Year" class="form-control" />
                <span asp-validation-for="Car.Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.LicensePlateNumber" class="control-label"></label>
                <input asp-for="Car.LicensePlateNumber" class="form-control" />
                <span asp-validation-for="Car.LicensePlateNumber" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group d-grid">
                <input type="submit" value="Edit" class="btn btn-warning btn-block" />
            </div>
        </form>
    </div>
</div>

<br />

<div>
    @* <a asp-page="/CarPages/Index" class="btn btn-outline-primary"><i class="fa-solid fa-arrow-left"></i> Back</a> *@
    <a asp-page="./Index" class="btn btn-outline-primary"><i class="fa-solid fa-arrow-left"></i> Back</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        var carModelId = @Model.Car.CarModelId;
    </script>
    <script src="~/js/cascadingdrodown.js"></script>
}