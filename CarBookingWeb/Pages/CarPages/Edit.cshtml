@page
@model CarBookingWeb.Pages.CarPages.EditModel
@{
    ViewData["Title"] = "Cars";
}

<h1>Create New Car</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="Car.CarId"/>
            <div class="form-group">
                <label asp-for="Car.Year" class="control-label"></label>
                <input asp-for="Car.Year" class="form-control" />
                <span asp-validation-for="Car.Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Car.Name" class="control-label"></label>
                <input asp-for="Car.Name" class="form-control" />
                <span asp-validation-for="Car.Name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group d-grid">
                <input type="submit" value="Edit" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

<br />

<div>
    <a asp-page="/CarPages/Index" class="btn btn-dark">Back</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}