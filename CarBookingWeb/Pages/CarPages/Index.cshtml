@page
@model CarBookingWeb.Pages.CarPages.IndexModel
@{
    <div class="row">
        <div class="col-md-6"><h2>List of Cars</h2></div>
        <div class="col-md-6"> <a asp-page="/CarPages/Create" class="btn btn-primary">Create New</a></div>
    </div>
    <br />

    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Cars[0].Name)</th>
                <th>@Html.DisplayNameFor(model => model.Cars[0].Year)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Cars)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Year</td>
                    <td>
                        <a asp-page="/CarPages/Detail" asp-route-carId="@item.CarId">Detail</a> |
                        <a asp-page="/CarPages/Edit" asp-route-carId="@item.CarId">Edit</a> |
                        <a asp-page="/CarPages/Delete" asp-route-carId="@item.CarId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
