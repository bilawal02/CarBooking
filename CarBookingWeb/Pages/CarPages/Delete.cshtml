@page
@model CarBookingWeb.Pages.CarPages.DeleteModel
@{
    ViewData["Title"] = "Cars";
}

<h1>Delete a Car</h1>
<h3>Are you sure you want to delete this?</h3>

<div>
    <h2>Car</h2>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.CarMaker.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.CarMaker.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.CarModel.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.CarModel.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.CarColor.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.CarColor.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.Year)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.Year)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Car.LicensePlateNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Car.LicensePlateNumber)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Car.Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> | 
        <a asp-page="/CarPages/Index" class="btn btn-outline-primary"><i class="fa-solid fa-arrow-left"></i> Back</a>
    </form>
</div>