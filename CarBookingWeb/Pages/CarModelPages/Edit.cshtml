@page
@model CarBookingWeb.Pages.CarModelPages.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>CarMaker</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CarModel.Id" />
            <div class="form-group">
                <label asp-for="CarModel.Name" class="control-label"></label>
                <input asp-for="CarModel.Name" class="form-control" />
                <span asp-validation-for="CarModel.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarModel.CarMakerId" class="control-label"></label>
                <select asp-for="CarModel.CarMakerId" asp-items="Model.Makes" class="form-control">
                    <option>---Select Maker---</option>
                </select>
                <span asp-validation-for="CarModel.CarMakerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
